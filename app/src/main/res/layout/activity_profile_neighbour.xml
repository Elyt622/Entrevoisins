<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/profile_activity_previous_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="#55FFFFFF"
            android:contentDescription="@string/previous_button"
            app:srcCompat="?attr/homeAsUpIndicator" />

        <ImageView
            android:contentDescription="@string/avatar_profile"
            android:layout_marginTop="-45dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id= "@+id/profile_activity_avatar_image"/>

        <TextView
            android:id="@+id/profile_activity_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="-60dp"
            android:text="@string/tab_neighbour_title"
            android:textSize="24sp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/profile_activity_fav_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="-2dp"
            android:layout_marginEnd="27.5dp"
            app:backgroundTint="#00FFFFFF"
            app:srcCompat="@android:drawable/btn_star_big_on" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>